#!/bin/bash

set -eu

PYPIURL=file:///tmp/pypi
mkdir -p ~/.pip

if [ -e ~/.pip/pip.conf ]; then
    mv ~/.pip/pip.conf{,.orig}
fi

if [ -e ~/.pydistutils.cfg ]; then
    mv ~/.pydistutils.cfg{,.orig}
fi

if [ -z $DIB_OFFLINE ]; then
    ONLINE="extra-index-url = https://pypi.python.org/simple"
else
    ONLINE=""
fi

if [ -z $CUSTOM_RELEASE ]; then
    PRE_RELEASE=""
else
    PRE_RELEASE="pre = 1"
fi

cat <<EOF > ~/.pip/pip.conf
[global]
index-url = $PYPIURL
$ONLINE
$PRE_RELEASE
log = $HOME/pip.log
EOF

cat <<EOF > ~/.pydistutils.cfg
[easy_install]
index_url = $PYPIURL
EOF
